<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_main_one"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_account_name"
            android:text="@string/txt_account_name"
            android:textSize="@dimen/txt_account_name_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_account_num"
            android:text="@string/txt_account_num"
            android:textSize="@dimen/txt_account_num_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/linear_main_one"
        android:id="@+id/linear_main_two"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_account_inquiry"
            android:text="@string/txt_account_inquiry"
            android:textSize="@dimen/txt_account_inquiry_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_account_inquiry_num"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:textSize="@dimen/txt_account_inquiry_num_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

</RelativeLayout>